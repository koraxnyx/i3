set $inactive-bg-color   #7A7A7A
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          #f1f1f1           #f1f1f1          $text-color          #D6D6D6 
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #c469f1 
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #c469f1
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #c469f1
hide_edge_borders both

